{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",                     
    "lib": ["DOM", "ES6", "ES5"],
    "sourceMap": true, 
    "sourceRoot": "./dist/source",
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "moduleResolution": "Node",                
    "strict": true,
    "noImplicitAny": true,                 
    "strictNullChecks": true,              
    "strictFunctionTypes": true,           
    "strictBindCallApply": true,           
    "strictPropertyInitialization": false,  
    "noImplicitThis": true,                
    "alwaysStrict": true,                  
    "esModuleInterop": true,                  
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,         
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  }, 
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_mudules"
  ]
}
