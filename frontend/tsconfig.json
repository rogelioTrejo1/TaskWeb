{
    "compilerOptions": {
        //Target y traspilación del codigo para la tectura
        "target": "ESNext",
        "module": "CommonJS",
        //Ubicación y salida de los archivos
        "outDir": "./dist/",
        "rootDir": "./src",
        //Reglas para la Compilacion del lenguaje.
        "removeComments": true,
        "importHelpers": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "lib": ["DOM", "ES6"]
    },
    //Archivos a COMPILAR 
    "include": [
        "src/**/*"
    ],
    //Archivos que no COMPILARA
    "exclude": [
        "node_modules",
        "webpack.config.ts",
        "dist"
    ]
}